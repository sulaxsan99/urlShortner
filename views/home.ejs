<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url shortener</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col lg 12 text-center">
                <h3>Url shortener</h3>
            </div>
        </div>
        <form action="/create" method="POST">
            <div class="row">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="paste your long URL"
                        aria-label="Recipient's username" name="longurl" aria-describedby="button-addon2">
                    <input class="btn btn-outline-secondary" type="submit" id="button-addon2" value="submit"></input>

                </div>
            </div>

        </form>


        <div class="row">
            <% for(let i=0;i < urlResults.length ; i++) { %>
                <div class="card text-bg-light mb-3" style="max-width: 18rem;">
                    <div class="card-header">Total Click : <%= urlResults[i].ClickCount     %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                           <a href="http://localhost:3000/<%=urlResults[i].sortUrl %>" target="_blank">http://localhost:3000/<%=urlResults[i].sortUrl %> </a>
                        </h5>
                        <p class="card-text">
                            <%= urlResults[i].LongUrl     %>
                        </p>
                        <a href="/delete/<%=urlResults[i].id %>" class="btn btn-danger">Remove</a>
                    </div>
                </div>
                <% } %>
        </div>


    </div>
</body>

</html>